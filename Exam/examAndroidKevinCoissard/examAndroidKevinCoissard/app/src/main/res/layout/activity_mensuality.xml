<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mensuality"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="meilleurtauxiut.examandroidkevincoissard.MensualityActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.23" />

        <TextView
            android:text="Les mensualités possibles :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RecapMontant"
            android:layout_weight="0.03" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1">

            <TextView
                android:text="Durée"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:layout_weight="0.37"
                android:textAlignment="center" />

            <TextView
                android:text="Taux"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView6"
                android:layout_weight="0.37"
                android:textAlignment="center" />

            <TextView
                android:text="Mensualité"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView7"
                android:layout_weight="0.20"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1">

            <TextView
                android:text="duree1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/duree1"
                android:layout_weight="0.35"
                android:textAlignment="center" />

            <TextView
                android:text="taux1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/taux1Text"
                android:layout_weight="0.33"
                android:textAlignment="center" />

            <TextView
                android:text="montant1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/montant1"
                android:layout_weight="0.19"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:weightSum="1">

            <TextView
                android:text="duree2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/duree2"
                android:layout_weight="0.36"
                android:textAlignment="center" />

            <TextView
                android:text="taux2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/taux2Text"
                android:layout_weight="0.33"
                android:textAlignment="center" />

            <TextView
                android:text="montant2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView20"
                android:layout_weight="0.22"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:weightSum="1">

            <TextView
                android:text="duree3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/duree3"
                android:layout_weight="0.36"
                android:textAlignment="center" />

            <TextView
                android:text="taux3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/taux3Text"
                android:layout_weight="0.29"
                android:textAlignment="center" />

            <TextView
                android:text="duree3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/montant3"
                android:layout_weight="0.24"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:layout_weight="0.15" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="95dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/montantPret2"
                android:layout_weight="1" />

            <Button
                android:text="Changer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boutonChangerMontant" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
